<div class="form-group">
  <label for="nom">Nom</label>
  <input
    type="text"
    name="nom"
    id="nom"
    class="form-control"
    value="<%= typeof nom != 'undefined' ? nom : '' %>"
    placeholder="Entrez votre nom"
  />
</div>
<div class="form-group">
  <label for="_id">Courriel</label>
  <input type="email" name="_id" id="_id" class="form-control" value="<%= typeof
  _id != 'undefined' ? _id : '' %>" placeholder="Entrez un courriel" <%= typeof
  disable != 'undefined' ? 'readonly' : '' %> />
</div>
